<section class="pt-32 pb-20 overflow-hidden">
  <div class="co">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h1 class="an h1 mb-6 inline-block">
        <span class="gr-tx">Write Better Content</span> <br />
        <span>With AI That Understands Your Style</span>
      </h1>
      
      <p class="an d1 text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Atom Writer combines powerful AI with intuitive tools to help you create engaging content
        faster than ever before - without losing your unique voice.
      </p>
      
      <div class="an d2 flex flex-wrap justify-center gap-4 relative z-20">
        <a href="https://app.atomwriter.com/signup" class="bg-primary-500 hover:bg-primary-600 text-white text-xl font-medium px-12 py-4 rounded-xl transition-all">Start Free Trial</a>
        <a href="#how-it-works" class="bg-white text-gray-600 hover:text-gray-800 text-xl font-medium px-12 py-4 rounded-xl transition-all">See How It Works</a>
      </div>
    </div>
    
    <div class="an d3 relative mx-auto max-w-4xl min-h-[600px]">
      <div class="cd overflow-hidden bg-white p-8 rounded-xl shadow-xl relative z-10">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-xl">✨</span>
          <h2 class="text-2xl font-bold">Step by Step Content Builder</h2>
        </div>
        
        <p class="text-gray-600 mb-10">Create amazing content in 5 simple steps</p>
        
        <div class="relative mb-12">
          <div class="flex justify-between mb-8 relative">
            <div class="progress-line"></div>
            <div class="step active" data-step="1"><span>1</span><div class="step-label">Basic Info</div></div>
            <div class="step" data-step="2"><span>2</span><div class="step-label">Title Selection</div></div>
            <div class="step" data-step="3"><span>3</span><div class="step-label">Content Outline</div></div>
            <div class="step" data-step="4"><span>4</span><div class="step-label">Content Writing</div></div>
            <div class="step" data-step="5"><span>5</span><div class="step-label">Final Content</div></div>
          </div>
          
          <div id="step-content" class="space-y-8">
            <div>
              <h3 class="text-gray-900 font-medium mb-4">Content Description</h3>
              <div class="relative">
                <textarea
                  id="content-description"
                  class="w-full h-[120px] p-4 border border-gray-200 rounded-lg resize-none focus:outline-none focus:border-primary-500"
                  placeholder="Describe what you want to write about..."
                  readonly
                ></textarea>
              </div>
            </div>
            
            <div>
              <h3 class="text-gray-900 font-medium mb-4">Language</h3>
              <div class="relative">
                <select
                  id="language-select"
                  class="w-full p-4 border border-gray-200 rounded-lg focus:outline-none focus:border-primary-500 appearance-none bg-white"
                  disabled
                >
                  <option value="en">English</option>
                  <option value="es">Spanish</option>
                  <option value="fr">French</option>
                  <option value="de">German</option>
                  <option value="it">Italian</option>
                  <option value="pt">Portuguese</option>
                  <option value="nl">Dutch</option>
                  <option value="pl">Polish</option>
                </select>
                <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div>
              <h3 class="text-gray-900 font-medium mb-4">Keywords</h3>
              <div class="relative">
                <input
                  type="text"
                  id="keywords"
                  class="w-full p-4 border border-gray-200 rounded-lg focus:outline-none focus:border-primary-500"
                  placeholder="Enter keywords separated by commas..."
                  readonly
                />
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end sticky bottom-8 bg-white pt-4 border-t border-gray-100">
          <button id="next-step" class="bg-black text-white px-8 py-3 rounded-lg font-medium hover:bg-gray-900 transition-colors hidden">
            Next Step
          </button>
        </div>
      </div>
      
      <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2  w-[150%] h-[150%] bg-gradient-to-r from-primary-100/50 via-primary-200/30 to-accent-100/50 blur-3xl rounded-full opacity-100"></div>
    </div>
  </div>
</section>

<script>
  // Optimized animation with reduced complexity
  let animationStarted = false;
  
  // Intersection Observer for animation trigger
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && !animationStarted) {
        animationStarted = true;
        const contentBuilder = entry.target;
        const descriptionElement = contentBuilder.querySelector('#content-description');
        const keywordsElement = contentBuilder.querySelector('#keywords');
        
        if (descriptionElement && keywordsElement) {
          startTypingAnimation(descriptionElement, keywordsElement);
        }
        
        observer.unobserve(contentBuilder);
      }
    });
  }, { threshold: 0.2, rootMargin: '50px' });

  const contentDescription = [
    "Creating a comprehensive guide about budget-friendly travel tips and money-saving strategies.",
    "Writing about smart ways to explore the world without breaking the bank.",
    "Sharing essential tips for planning affordable yet memorable travel experiences."
  ];
  
  const keywords = [
    "budget travel, backpacking, cheap flights, hostel stays, travel hacks",
    "affordable travel, money saving, travel planning, budget tips",
    "cheap accommodation, local transport, budget-friendly destinations"
  ];
  
  const titleSuggestions = [
    "The Ultimate Guide to Budget Travel: See More, Spend Less",
    "How to Travel the World on a Shoestring Budget",
    "Budget Travel 101: Your Complete Money-Saving Guide",
    "Smart Traveler's Guide to Affordable Adventures",
    "Travel Hacks: Explore the World Without Breaking the Bank"
  ];
  
  const finalContent = {
    title: "The Ultimate Guide to Budget Travel: See More, Spend Less",
    content: `Introduction <br>
Budget travel is more possible than ever thanks to travel apps, low-cost airlines, and easy access to planning tools. You don't need a lot of money to see the world—you just need a smart strategy.

Traveling on a budget often leads to more meaningful experiences. You'll meet locals, discover hidden spots, and enjoy real culture without overspending. The secret is knowing where and how to save.

The core of budget travel is simple: book cheap flights, stay in affordable places, use local transport, and plan ahead. With these steps, you can travel more for less.<br>
Step 1: Smart Flight Booking <br>
Flights can be one of your biggest expenses, but smart booking helps. Book 1–3 months early for domestic trips and 2–6 months for international. Avoid weekends and peak seasons.

Use comparison sites like Skyscanner or Google Flights to find deals. Turn on alerts so you know when prices drop.

For the best savings, stay flexible. Choose budget airlines, travel mid-week, and consider flying into nearby airports if it's cheaper.<br>
Step 2: Budget Accommodation <br>
Skip expensive hotels. Hostels, guesthouses, and homestays are cheaper and often more social. Apps like Hostelworld and Airbnb help you find great deals easily.

Want to save more? Try Couchsurfing or house-sitting. These options can be free and offer unique local experiences that you won't get in a hotel.<br>
Step 3: Local Transportation <br>
Using local transport is one of the best ways to save money. Buses, trains, and subways are far cheaper than taxis. Learn the basics of the local system before you arrive.

Walk or rent a bike if the area is safe—it's budget-friendly and helps you explore more naturally.

Many cities offer travel passes with unlimited rides and tourist discounts. These passes can be a great value if you're staying a few days.<br>
Travel smart, spend less, and experience more—it's that simple.
`
  };

  let currentIndex = 0;
  let currentStep = 1;
  let selectedTitle = "";
  
  // Optimized typing function
  function typeText(element, text, callback, speed = 30) {
    let charIndex = 0;
    element.value = '';

    // Add initial delay before typing starts
    setTimeout(() => {
      function type() {
        if (charIndex < text.length) {
          element.value = text.substring(0, charIndex + 1);
          charIndex += 1;
          setTimeout(type, speed);
        } else {
          if (callback) callback();
        }
      }
      type();
    }, 1000);
  }
  
  function startTypingAnimation(descriptionElement, keywordsElement) {
    if (!descriptionElement || !keywordsElement) return;
    
    typeText(descriptionElement, contentDescription[currentIndex], () => {
      setTimeout(() => {
        typeText(keywordsElement, keywords[currentIndex], () => {
          currentIndex = (currentIndex + 1) % contentDescription.length;
          setTimeout(() => {
            simulateNextClick();
          }, 1000);
        });
      }, 800);
    });
  }

  function simulateNextClick() {
    const nextButton = document.getElementById('next-step');
    if (nextButton) {
      nextButton.style.transform = 'scale(0.95)';
      setTimeout(() => {
        nextButton.style.transform = 'scale(1)';
      }, 200);
      nextButton.click();
    }
  }
  
  // Simplified step functions for better performance
  function showTitleSelection() {
    const stepContent = document.getElementById('step-content');
    if (!stepContent) return;
    const randomTitleIndex = Math.floor(Math.random() * titleSuggestions.length);
    
    stepContent.innerHTML = `
      <div class="space-y-4">
        ${titleSuggestions.slice(0, 3).map((title, index) => `
          <button class="title-option w-full text-left p-4 rounded-lg border border-gray-200 hover:border-primary-500 transition-all ${index === 0 ? 'border-primary-500 bg-primary-50' : ''}">
            ${title}
          </button>
        `).join('')}
      </div>
    `;
    
    setTimeout(() => {
      simulateNextClick();
    }, 1500);
  }
  
  function showContentOutline() {
    const stepContent = document.getElementById('step-content');
    if (!stepContent) return;
    
    stepContent.innerHTML = `
      <div class="grid grid-cols-2 gap-6">
        <div class="outline-section border border-primary-500 bg-primary-50 rounded-lg p-4">
          <h3 class="text-lg font-medium mb-4">Smart Structure</h3>
          <ul class="space-y-3 text-gray-600">
            <li>Introduction with hook</li>
            <li>Step-by-step guide</li>
            <li>Practical examples</li>
            <li>Actionable conclusion</li>
          </ul>
        </div>

        <div class="outline-section border border-gray-200 rounded-lg p-4">
          <h3 class="text-lg font-medium mb-4">Alternative Structure</h3>
          <ul class="space-y-3 text-gray-600">
            <li>Problem identification</li>
            <li>Solution breakdown</li>
            <li>Implementation tips</li>
            <li>Results summary</li>
          </ul>
        </div>
      </div>
    `;
    
    setTimeout(() => {
      simulateNextClick();
    }, 1500);
  }
  
  function showContentWriting() {
    const stepContent = document.getElementById('step-content');
    if (!stepContent) return;
    
    stepContent.innerHTML = `
      <div class="grid grid-cols-2 gap-8">
        <div class="writing-section bg-white rounded-lg border border-gray-200 p-4">
          <h3 class="font-medium mb-4">Writing Progress</h3>
          <div class="space-y-4">
            <div class="progress-item">
              <div class="flex justify-between mb-2">
                <span>Introduction</span>
                <span class="text-green-500">✓ Complete</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-green-500 h-2 rounded-full w-full"></div>
              </div>
            </div>
            
            <div class="progress-item">
              <div class="flex justify-between mb-2">
                <span>Main Content</span>
                <span class="text-blue-500">⚡ Writing...</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-500 h-2 rounded-full w-3/4 animate-pulse"></div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="preview-section bg-white rounded-lg border border-gray-200 p-4">
          <h3 class="font-medium mb-4">Live Preview</h3>
          <div class="prose prose-sm">
            <h2>Budget Travel Guide</h2>
            <p>Budget travel opens up a world of possibilities...</p>
            <h3>Step 1: Smart Flight Booking</h3>
            <p>Finding affordable flights requires...</p>
          </div>
        </div>
      </div>
    `;
    
    setTimeout(() => {
      simulateNextClick();
    }, 1500);
  }
  
  function showFinalContent() {
    const stepContent = document.getElementById('step-content');
    if (!stepContent) return;
    
    stepContent.innerHTML = `
      <div class="final-content bg-white rounded-lg border border-gray-200 p-8">
        <div class="flex justify-between items-center mb-8">
          <h2 class="text-2xl font-bold text-gray-900">${finalContent.title}</h2>
          <button class="bt bt-pr">Copy Content</button>
        </div>
        <div class="prose max-w-none text-gray-900">
          <p class="text-gray-900">Your complete budget travel guide is ready! This comprehensive article includes practical tips, step-by-step instructions, and actionable advice to help readers travel more while spending less.</p>
        </div>
      </div>
    `;
  }
  
  function updateStep(step) {
    const steps = document.querySelectorAll('.step');
    const progressLine = document.querySelector('.progress-line');
    const nextButton = document.getElementById('next-step');
    
    steps.forEach((s, index) => {
      if (index + 1 <= step) {
        s.classList.add('active');
      } else {
        s.classList.remove('active');
      }
    });
    
    if (nextButton) {
      if (step < 5) {
        nextButton.classList.remove('hidden');
      } else {
        nextButton.classList.add('hidden');
      }
    }
    
    if (progressLine) {
      progressLine.style.background = `linear-gradient(to right, 
        #000 ${((step - 1) / (steps.length - 1)) * 100}%, 
        #e5e7eb ${((step - 1) / (steps.length - 1)) * 100}%
      )`;
    }
  }
  
  document.addEventListener('DOMContentLoaded', () => {
    const contentBuilder = document.querySelector('.an.d3');
    const nextButton = document.getElementById('next-step');
    let isAnimating = false;
    
    if (nextButton) {
      nextButton.classList.remove('hidden');
    }
    
    if (contentBuilder) {
      observer.observe(contentBuilder);
    }
    
    nextButton?.addEventListener('click', () => {
      if (isAnimating) return;
      currentStep++;
      updateStep(currentStep);
      isAnimating = true;

      if (currentStep === 2) {
        showTitleSelection();
      } else if (currentStep === 3) {
        showContentOutline();
      } else if (currentStep === 4) {
        showContentWriting();
      } else if (currentStep === 5) {
        showFinalContent();
      }
      
      setTimeout(() => {
        isAnimating = false;
      }, 300);
    });
  });
</script>

<style>
  .progress-line {
    position: absolute;
    top: 25px;
    left: 50px;
    right: 50px;
    height: 2px;
    background: #e5e7eb;
    z-index: 0;
  }
  
  .step {
    position: relative;
    z-index: 1;
    text-align: center;
  }
  
  .step span {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f3f4f6;
    border-radius: 50%;
    margin: 0 auto 8px;
    font-weight: 500;
    color: #6b7280;
    transition: all 0.3s ease;
  }
  
  .step div {
    color: #9ca3af;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .step.active span {
    background: #000;
    color: white;
  }
  
  .step.active .step-label {
    color: #000;
    font-weight: 600;
  }
  
  .outline-section {
    background: white;
    transition: all 0.3s ease;
  }

  .outline-section:hover {
    border-color: #6366f1;
  }
  
  /* Optimize animations for performance */
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
</style>