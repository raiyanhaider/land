    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.05);
  }
  
  .pricing-card ul {
    margin-bottom: 2rem;
  }
  
  .pricing-card li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    color: #4b5563;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const monthlyBtn = document.getElementById('monthly-btn');
    const yearlyBtn = document.getElementById('yearly-btn');
    const monthlyPrices = document.querySelectorAll('.monthly-price');
    const yearlyPrices = document.querySelectorAll('.yearly-price');
    const pricingCards = document.querySelectorAll('.pricing-card');
    
    yearlyBtn?.addEventListener('click', () => {
      monthlyBtn?.classList.remove('bg-white', 'shadow-sm');
      monthlyBtn?.classList.add('text-gray-600');
      yearlyBtn.classList.add('bg-white', 'shadow-sm');
      yearlyBtn.classList.remove('text-gray-600');
      
      // Animate price changes
      monthlyPrices.forEach(price => {
        price.style.opacity = '0';
        setTimeout(() => {
          price.classList.add('hidden');
          const yearlyPrice = price.nextElementSibling;
          if (yearlyPrice) {
            yearlyPrice.classList.remove('hidden');
            setTimeout(() => {
              yearlyPrice.style.opacity = '1';
            }, 50);
          }
        }, 200);
      });
    });
    
    monthlyBtn?.addEventListener('click', () => {
      yearlyBtn?.classList.remove('bg-white', 'shadow-sm');
      yearlyBtn?.classList.add('text-gray-600');
      monthlyBtn.classList.add('bg-white', 'shadow-sm');
      monthlyBtn.classList.remove('text-gray-600');
      
      // Animate price changes
      yearlyPrices.forEach(price => {
        price.style.opacity = '0';
        setTimeout(() => {
          price.classList.add('hidden');
          const monthlyPrice = price.previousElementSibling;
          if (monthlyPrice) {
            monthlyPrice.classList.remove('hidden');
            setTimeout(() => {
              monthlyPrice.style.opacity = '1';
            }, 50);
          }
        }, 200);
      });
    });
    
    // Add hover effect to pricing cards
    pricingCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        pricingCards.forEach(otherCard => {
          if (otherCard !== card) {
            otherCard.style.opacity = '0.7';
          }
        });
      });
      
      card.addEventListener('mouseleave', () => {
        pricingCards.forEach(otherCard => {
          otherCard.style.opacity = '1';
        });
      });
    });
  });
</script>